     "text": [
      "Dictionary={\"a\", \"and\", \"casual\", \"event\", \"for\", \"formal\", \"jeans\", \"look\", \"shirt\", \"smart\", \"suit\", \"t-shirt\", \"tie\", \"typical\", \"wear\"}\n",
      "\n",
      "Inverse term frequency\n",
      "t_i\t\tn_i\tidf_i\n",
      "a\t\t3\t0.00\n",
      "and\t\t3\t0.00\n",
      "casual\t\t2\t0.58\n",
