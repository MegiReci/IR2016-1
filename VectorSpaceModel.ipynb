      "tie\t\t1\t1.58\n",
      "typical\t\t1\t1.58\n",
      "wear\t\t3\t0.00\n",
      "\n",
      "Let's purge terms with idf=0\n",
      "Dictionary={\"casual\", \"event\", \"formal\", \"jeans\", \"look\", \"shirt\", \"smart\", \"suit\", \"t-shirt\", \"tie\", \"typical\"}\n",
      "\n",
      "Term frequency\n",
      "t_i\t\ttf_,1\ttf_,2\ttf_,3\n",
      "casual\t\t1\t0\t1\n",
      "event\t\t0\t1\t0\n",
